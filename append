        </ul>
        <button onclick="append()">Append</button>
        <script>
            function append() {
                var node = document.createElement("LI");
                var textnode =
                    document.createTextNode("C#");
                node.appendChild(textnode);
                document.getElementById("languages").appendChild(node);
            }  
        </script>
