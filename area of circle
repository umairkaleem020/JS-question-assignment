<body>
    <h2>
        Welcome to the javaTpoint.com
    </h2>
    <p> Here the radius of circle is 20cm </p>
    <p>
        Click the following button to get the area and perimeter of circle.
    </p>
    <p id="demo"></p>
    <p id="demo1"></p>
    <button onclick="circle()"> Click me </button>

    <script>
        var r = 15;
        function circle() {
            document.getElementById('demo').innerHTML = 'The area of circle with radius 15cm is: ' + Math.PI * r * r;
            document.getElementById('demo1').innerHTML = 'The perimeter of circle with radius 15cm is: ' + 2 * Math.PI * r;
        }
    </script>

